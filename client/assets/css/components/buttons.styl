/*--------------------------------------------------------------------
*
* BUTTONS
*
--------------------------------------------------------------------*/

.btn
  border-radius: $ui-radius
  padding: $ui-spacing-third $ui-spacing-half
  border: none
  color: white
  background-color: $blue
  cursor: pointer
  user-select: none
  transition: all .5s ease-in
  
  &:focus
    outline: none
    
  &:hover
    background-color: $blue-light
    
// Secondary button
    
.btn.btn-secondary
  border: $ui-border
  background: linear-gradient(to bottom, rgba($gray-lighter, 0) 0%,rgba($gray-lighter,0.3) 100%)
  color: $gray
  
  &:hover
    background: linear-gradient(to bottom, rgba($gray-lighter, 0) 0%,rgba($gray-lighter,0.6) 100%)
    color: inherit
    
// Warning button

.btn-warning
  background-color: $red
  
  &:hover
    background-color: darken($red, 20%)

// Button sizes

.btn-large
  padding: $ui-spacing-half $ui-spacing
  
.btn-small
  padding: $ui-spacing-fourth $ui-spacing-third

@media screen and (max-width: 48em)

  .btn
    width: 100%